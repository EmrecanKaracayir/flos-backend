{
  "name": "flos",
  "version": "1.0.0",
  "main": "./dist/server.js",
  "scripts": {
    "lint": "eslint src --ext ts && tsc --noEmit",
    "format": "prettier --write .",
    "clean": "rm -rf ./dist",
    "prebuild": "npm run clean && npm run format && npm run lint",
    "build": "tsc",
    "dev": "tsc --watch",
    "prepareDevEnv": "cp -rf ./environments/dev/* ./ && npm run build",
    "prepareLiveEnv": "cp -rf ./environments/live/* ./ && npm run build",
    "startDev": "npm run prepareDevEnv && node ./dist/server.js",
    "startLive": "npm run prepareLiveEnv && pm2 start  ./dist/server.js",
    "stopLive": "pm2 stop ./dist/server.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
